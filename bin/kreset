#/usr/bin/env bash
set -e
set -x
kubectl delete namespaces atuin-namespace yopass-namespace
kubectl delete all --all
kubectl delete persistentvolumeclaims --all
kubectl delete persistentvolume --all
pushd ~/.kube/src
kubectl apply -f ./namespaces.yaml
kubectl apply -f ./yopass.yaml -n yopass-namespace
kubectl apply -n atuin-namespace \
              -f ./secrets.yaml \
              -f ./atuin.yaml
popd
